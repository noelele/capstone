<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context="noelanthony.com.lostandfoundfinal.loginANDregister.registerActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#005880"
        android:gravity="center"
        android:text="Register"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_alignLeft="@+id/emailEditText"
        android:layout_alignStart="@+id/emailEditText"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="7dp"
        android:text="Email Address"
        android:textColor="#005880"
        android:textSize="17sp" />


    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="221dp"
        android:layout_height="33dp"
        android:layout_below="@+id/emailTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/registrationeditext"
        android:ems="10"
        android:hint=" Enter Email Address"
        android:inputType="textWebEmailAddress"
        android:padding="2dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/emailEditText"
        android:layout_alignStart="@+id/emailEditText"
        android:layout_below="@+id/emailEditText"
        android:layout_marginTop="22dp"
        android:textColor="#005880"
        android:textSize="17sp"
        android:text="Name" />

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="221dp"
        android:layout_height="33dp"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="10dp"
        android:background="@drawable/registrationeditext"
        android:ems="10"
        android:hint="Enter Full Name"
        android:inputType="textPersonName"
        android:padding="2dp" />

    <TextView
        android:id="@+id/passwordTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nameEditText"
        android:layout_alignStart="@+id/nameEditText"
        android:layout_below="@+id/nameEditText"
        android:layout_marginTop="22dp"
        android:text="Password"
        android:textColor="#005880"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/confirmPasswordTextView"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_alignLeft="@+id/passwordEditText"
        android:layout_alignStart="@+id/passwordEditText"
        android:layout_below="@+id/passwordEditText"
        android:layout_marginTop="22dp"
        android:text="Confirm Password"
        android:textColor="#005880"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="221dp"
        android:layout_height="33dp"
        android:layout_below="@+id/passwordTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/registrationeditext"
        android:ems="10"
        android:hint=" Enter Password"
        android:inputType="textPassword"
        android:padding="2dp" />

    <EditText
        android:id="@+id/confpassEditText"
        android:layout_width="221dp"
        android:layout_height="33dp"
        android:layout_alignLeft="@+id/confirmPasswordTextView"
        android:layout_alignStart="@+id/confirmPasswordTextView"
        android:layout_below="@+id/confirmPasswordTextView"
        android:layout_marginTop="10dp"
        android:background="@drawable/registrationeditext"
        android:ems="10"
        android:hint=" Confirm Password"
        android:inputType="textPassword"
        android:padding="2dp" />

    <Button
        android:id="@+id/registerBtn"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_above="@+id/backtologinTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:background="@drawable/roundedcorner"
        android:text="Register"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />
    <ProgressBar
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/backtologinTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/registerBtn"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/registerBtn"
        android:layout_marginBottom="8dp"
        android:text="Already have an account? Login here"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp" />




</RelativeLayout>
